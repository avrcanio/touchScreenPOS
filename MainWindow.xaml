<Window x:Class="TouchScreenPOS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TouchScreenPOS"
        mc:Ignorable="d"
        Title="Blagajna"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Background="#0B0B0B">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="caffe bar MOZART"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Foreground="#F57C00"
                       VerticalAlignment="Center"/>

            <TextBlock x:Name="UserInfoText"
                       Grid.Column="1"
                       FontSize="20"
                       Foreground="#E0E0E0"
                       VerticalAlignment="Center"
                       Margin="16,0,0,0"/>

            <Button Grid.Column="2"
                    Content="LOGOUT"
                    FontSize="22"
                    Padding="18,10"
                    Margin="12,0,0,0"
                    Background="#F57C00"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="Logout_Click"/>

            <Button Grid.Column="3"
                    Content="IZLAZ"
                    FontSize="24"
                    Padding="22,12"
                    Margin="12,0,0,0"
                    Background="#E53935"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="Exit_Click"/>
        </Grid>

        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid x:Name="LoginGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" CornerRadius="22" Background="#121212" Padding="32" Margin="0,0,20,0">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Image Source="Assets/mozart-logo.png"
                               Height="260"
                               Stretch="Uniform"
                               Margin="0,0,0,20"/>
                        <TextBlock Text="Touch screen POS"
                               Foreground="White"
                               FontSize="36"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                        <TextBlock Text="Prijavite se za pocetak rada"
                               Foreground="#BDBDBD"
                               FontSize="22"
                               Margin="0,8,0,0"
                               HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" CornerRadius="22" Background="White" Padding="32">
                    <StackPanel>
                    <TextBlock Text="Prijava"
                               FontSize="34"
                               FontWeight="SemiBold"
                               Foreground="#212121"/>

                    <TextBlock Text="Korisnicko ime"
                               FontSize="20"
                               Foreground="#616161"
                               Margin="0,20,0,6"/>
                    <TextBox x:Name="UsernameTextBox"
                             Height="64"
                             FontSize="24"
                             VerticalContentAlignment="Center"/>

                    <TextBlock Text="Lozinka"
                               FontSize="20"
                               Foreground="#616161"
                               Margin="0,18,0,6"/>
                    <PasswordBox x:Name="PasswordBox"
                                 Height="64"
                                 FontSize="24"/>

                    <Button Content="PRIJAVA"
                            Height="72"
                            FontSize="26"
                            Margin="0,24,0,0"
                            Background="#F57C00"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="Login_Click"/>

                    <TextBlock x:Name="LoginStatusText"
                               Text=""
                               FontSize="20"
                               Foreground="#E53935"
                               Margin="0,16,0,0"
                               TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </Grid>

            <Grid x:Name="ListGrid" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" CornerRadius="18" Background="White" Padding="16" Margin="0,0,0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Reprezentacije"
                                   FontSize="28"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>

                        <Button Grid.Column="1"
                                Content="NOVA"
                                FontSize="22"
                                Padding="18,8"
                                Margin="12,0,0,0"
                                Background="#F57C00"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="OpenCreateRepresentation_Click"/>
                        <TextBlock x:Name="ListStatusText"
                                   Grid.Column="2"
                                   FontSize="20"
                                   Foreground="#E53935"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <Border Grid.Row="1" CornerRadius="18" Background="White" Padding="16">
                    <ListView x:Name="RepresentationsListView" FontSize="20" MouseDoubleClick="RepresentationsListView_DoubleClick">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="80"/>
                                <GridViewColumn Header="Vrijeme" DisplayMemberBinding="{Binding OccurredAtDisplay}" Width="220"/>
                                <GridViewColumn Header="Razlog" DisplayMemberBinding="{Binding ReasonName}" Width="220"/>
                                <GridViewColumn Header="Napomena" DisplayMemberBinding="{Binding Note}" Width="260"/>
                                <GridViewColumn Header="Stavki" DisplayMemberBinding="{Binding ItemCount}" Width="80"/>
                                <GridViewColumn Header="User" DisplayMemberBinding="{Binding UserName}" Width="160"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Border>
            </Grid>

            <Grid x:Name="CreateGrid" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" CornerRadius="18" Background="White" Padding="16" Margin="0,0,0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Content="NAZAD"
                                FontSize="20"
                                Padding="16,8"
                                Background="#424242"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="BackToList_Click"/>

                        <TextBlock Grid.Column="1"
                                   Text="Nova reprezentacija"
                                   FontSize="26"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"
                                   Margin="16,0,0,0"/>

                        <TextBlock x:Name="CreateStatusText"
                                   Grid.Column="2"
                                   FontSize="18"
                                   Foreground="#E53935"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="235"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="1.6*"/>
                </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" CornerRadius="18" Background="White" Padding="16" Margin="0,0,16,0">
                        <StackPanel>
                            <TextBlock Text="Kategorije"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,10"/>
                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                                          PanningMode="VerticalOnly"
                                          IsManipulationEnabled="True">
                                <StackPanel>
                                    <ItemsControl x:Name="CategoryItemsControl">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Margin="0,0,0,8"
                                                        Height="52"
                                                        FontSize="18"
                                                        Background="#FAFAFA"
                                                        BorderBrush="#E0E0E0"
                                                        BorderThickness="1"
                                                        Click="CategoryFilter_Click">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Name}"/>
                                                        <TextBlock Text=" ("/>
                                                        <TextBlock Text="{Binding Count}"/>
                                                        <TextBlock Text=")"/>
                                                    </StackPanel>
                                                </Button>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    <Button Content="SVE"
                                            Height="52"
                                            FontSize="18"
                                            Margin="0,8,0,0"
                                            Background="#ECEFF1"
                                            BorderThickness="0"
                                            Click="ClearCategoryFilter_Click"/>
                                </StackPanel>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" CornerRadius="18" Background="White" Padding="16" Margin="0,0,16,0">
                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      PanningMode="VerticalOnly"
                                      IsManipulationEnabled="True">
                            <ItemsControl x:Name="ArtikliItemsControl">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Margin="8"
                                                Padding="12"
                                                Width="220"
                                                Height="300"
                                                Background="#FAFAFA"
                                                BorderBrush="#E0E0E0"
                                                BorderThickness="1"
                                                Click="AddArtikl_Click">
                                            <StackPanel>
                                                <Border Width="125" Height="200" Background="#EEEEEE" CornerRadius="8" HorizontalAlignment="Center">
                                                    <Image Source="{Binding Image}" Stretch="UniformToFill"/>
                                                </Border>
                                                <TextBlock Text="{Binding Name}"
                                                           FontSize="18"
                                                           TextWrapping="Wrap"
                                                           TextTrimming="CharacterEllipsis"
                                                           Margin="0,8,0,0"/>
                                            </StackPanel>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>

                    <Border Grid.Column="2" CornerRadius="18" Background="White" Padding="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="SkladiÅ¡te"
                                       FontSize="20"
                                       Foreground="#616161"/>
                            <ComboBox x:Name="WarehouseComboBox"
                                      Grid.Row="1"
                                      Height="52"
                                      FontSize="20"
                                      Margin="0,8,0,12"
                                      DisplayMemberPath="Name"
                                      SelectedValuePath="RmId"/>

                            <TextBlock Grid.Row="2"
                                       Text="Razlog"
                                       FontSize="20"
                                       Foreground="#616161"/>
                            <ComboBox x:Name="ReasonComboBox"
                                      Grid.Row="3"
                                      Height="52"
                                      FontSize="20"
                                      Margin="0,8,0,12"
                                      DisplayMemberPath="Name"
                                      SelectedValuePath="Id"/>

                            <DataGrid x:Name="CartDataGrid"
                                      Grid.Row="4"
                                      AutoGenerateColumns="False"
                                      FontSize="18"
                                      HeadersVisibility="Column"
                                      CanUserAddRows="False"
                                      Margin="0,8,0,12"
                                      SelectionMode="Single"
                                      SelectionChanged="CartDataGrid_SelectionChanged">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Artikl" Binding="{Binding Name}" Width="*"/>
                                    <DataGridTextColumn Header="Kolicina" Binding="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" Width="120"/>
                                    <DataGridTextColumn Header="Cijena" Binding="{Binding Price, UpdateSourceTrigger=PropertyChanged}" Width="120"/>
                                    <DataGridTextColumn Header="Iznos" Binding="{Binding Amount}" Width="120" IsReadOnly="True"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <StackPanel Grid.Row="5">
                                <TextBlock Text="Napomena"
                                           FontSize="20"
                                           Foreground="#616161"/>
                                <TextBox x:Name="NoteTextBox"
                                         Height="52"
                                         FontSize="20"
                                         VerticalContentAlignment="Center"
                                         Margin="0,8,0,12"/>

                                <Button Content="SPREMI"
                                        Height="64"
                                        FontSize="22"
                                        Background="#43A047"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        Click="SaveRepresentation_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
