<Window x:Class="TouchScreenPOS.CartItemEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Uredi količinu"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    <Border Padding="20" Background="White" CornerRadius="12">
        <StackPanel Width="480">
            <TextBlock Text="{Binding Name}" FontSize="24" FontWeight="SemiBold" TextWrapping="Wrap"/>
            <TextBlock Text="Količina" FontSize="20" Foreground="#616161" Margin="0,14,0,8"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,12">
                <Button x:Name="DecrementButton"
                        Content="–"
                        Width="96"
                        Height="96"
                        FontSize="36"
                        Background="#E0E0E0"
                        BorderThickness="0"
                        Click="Decrement_Click"/>
                <TextBlock Text="{Binding Quantity}"
                           Width="160"
                           FontSize="36"
                           FontWeight="SemiBold"
                           TextAlignment="Center"
                           VerticalAlignment="Center"/>
                <Button x:Name="IncrementButton"
                        Content="＋"
                        Width="96"
                        Height="96"
                        FontSize="36"
                        Background="#E0E0E0"
                        BorderThickness="0"
                        Click="Increment_Click"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="RemoveButton"
                        Content="UKLONI"
                        FontSize="22"
                        Padding="22,12"
                        Margin="0,0,8,0"
                        Background="#E53935"
                        Foreground="White"
                        BorderThickness="0"
                        Click="Remove_Click"/>
                <Button x:Name="DoneButton"
                        Content="GOTOVO"
                        FontSize="22"
                        Padding="22,12"
                        Background="#43A047"
                        Foreground="White"
                        BorderThickness="0"
                        Click="Done_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
