<Window x:Class="TouchScreenPOS.RepresentationDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalji reprezentacije"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    <Border Padding="16" Background="White" CornerRadius="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel>
                <TextBlock Text="{Binding Id, StringFormat=Reprezentacija #{0}}" FontSize="22" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding OccurredAt}" FontSize="16" Foreground="#757575" Margin="0,4,0,0"/>
                <TextBlock Text="{Binding ReasonName}" FontSize="16" Foreground="#424242" Margin="0,4,0,0"/>
            </StackPanel>

            <TextBlock Grid.Row="1"
                       Text="{Binding Note}"
                       FontSize="16"
                       Foreground="#616161"
                       Margin="0,10,0,10"
                       TextWrapping="Wrap"/>

            <ListView Grid.Row="2" ItemsSource="{Binding Items}" FontSize="16" MinWidth="600">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Artikl" DisplayMemberBinding="{Binding ArtiklName}" Width="260"/>
                        <GridViewColumn Header="KoliÄina" DisplayMemberBinding="{Binding Quantity}" Width="120"/>
                        <GridViewColumn Header="Cijena" DisplayMemberBinding="{Binding Price}" Width="120"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <Button Grid.Row="3"
                    Content="ZATVORI"
                    FontSize="18"
                    Padding="16,8"
                    Margin="0,12,0,0"
                    HorizontalAlignment="Right"
                    Background="#E53935"
                    Foreground="White"
                    BorderThickness="0"
                    Click="Close_Click"/>
        </Grid>
    </Border>
</Window>
